<%= form_for(@order) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name, required: true, autofocus: true %>
  </p>
  <p>
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </p>
  <p>
    <%= f.label :address %><br>
    <%= f.text_area :address %>
  </p>
  <p>
    <%= f.label :contact %><br/>
    <%= f.text_field :contact, autofocus: true %>
  <p>
  <p>
    <%= f.label :payment_mode %><br>
    <%= f.text_field :payment_mode %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>